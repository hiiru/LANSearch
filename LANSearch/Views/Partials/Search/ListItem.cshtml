<a href="@Model.Url" target="_blank" class="list-group-item filelist">
    <h4 class="media-heading">@Model.Name</h4>
    <div class="row">
        <div class="col-md-3 col-xs-6"><span class="glyphicon glyphicon-hdd"></span> @Model.ServerName</div>
        <div class="col-md-2 col-xs-6"><span class="glyphicon glyphicon-user"></span> @(Model.Server != null ? Model.Server.Login : "-")</div>
        <div class="col-md-3 col-xs-6"><span class="glyphicon glyphicon-file"></span> @Model.Size</div>
        <div class="col-md-4 col-xs-6 text-right stale"><span class="glyphicon glyphicon-time"></span> @Model.Date</div>
    </div>
    <div class="row">
        <small class="col-md-12">@Model.Path</small>
    </div>
</a>