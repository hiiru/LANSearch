@using System.Collections.Generic
@{
    Layout = "Master/Master";
    ViewBag.Title = "Admin .:. Configuration";
}
<div class="col-xs-12 content">
    <form class="form-horizontal" role="form" method="POST">
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
        @foreach (KeyValuePair<string, object> setting in Model)
        {
            <div class="form-group">
                <label class="col-sm-4 control-label">@setting.Key</label>
                @if (setting.Value is bool)
                {
                    <div class="col-sm-8"><input type="checkbox" name="@setting.Key" @((bool)setting.Value ? " checked=\"checked\"" :"")></div>
                }
                else
                {
                    <div class="col-sm-8"><input type="text" name="@setting.Key" class="form-control" value="@setting.Value"></div>
                }
            </div>
        }
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
        @Html.AntiForgeryToken()
    </form>
</div>