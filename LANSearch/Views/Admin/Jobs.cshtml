@{
    Layout = "Master/Master";
    ViewBag.Title = "Admin .:. Jobs";
}
<div class="col-xs-12 content">
    <h2>Recurring Jobs</h2>
    <span>workaround since hangfire dashboard can't delete recurring jobs</span>
    <hr />
    <form class="form" id="recurring" method="post">
        <div class="col-xs-12">
            <button name="recurringStop" value="true" type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-remove"></span>Stop Crawler</button>
            <button name="recurringStart" value="true" type="submit" class="btn btn-default">Start Crawler</button>
        </div>
    </form>
</div>