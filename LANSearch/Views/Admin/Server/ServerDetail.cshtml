@{
    Layout = "Master/Master";
    ViewBag.Title = "Admin .:. Server .:. Detail";
}
@if (!Model.IsCreation)
{
    <div class="col-xs-12 content">
        <div class="row">
            <div class="col-md-1">ID: @Model.Server.Id</div>
            <div class="col-md-5"><a href="@Model.Server.Url">@Model.Server.Url</a></div>
            <div class="col-md-2"><button type="submit" class="btn btn-info">Rescan</button></div>
            <div class="col-md-2"><button type="submit" class="btn btn-default">Rescan</button></div>
            <div class="col-md-2"><button type="submit" class="btn btn-danger">Remove from Search</button></div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-4"><strong>Created: </strong>@Model.Server.Created</div>
            <div class="col-md-4"><strong>ScanDateFirst: </strong>@Model.Server.ScanDateFirst</div>
            <div class="col-md-4"><strong>ScanDateLast: </strong>@Model.Server.ScanDateLast</div>
        </div>
        <div class="row">
            <div class="col-md-6"><strong>ScanFailedLastDate: </strong>@Model.Server.ScanFailedLastDate</div>
            <div class="col-md-6"><strong>ScanFailedAttempts: </strong>@Model.Server.ScanFailedAttempts</div>
            <div class="col-md-12"><strong>ScanFailedMessage: </strong>@Model.Server.ScanFailedMessage</div>
        </div>
    </div>
    <hr />
}
<div class="col-xs-12 content">
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger" role="alert">@Html.Raw(Model.Error)</div>
    }
    <div class="row">
        <form class="form" method="post">
            <div class="row">
                <div class="form-group col-md-4">
                    <label class=" control-label" for="address">Address</label>
                    <input name="address" type="text" class="form-control" maxlength="15" value="@Model.Server.Address">
                </div>
                <div class="form-group col-md-2">
                    <label class="control-label" for="port">Port</label>
                    <input name="port" type="text" class="form-control" maxlength="5" value="@Model.Server.Port">
                </div>
                @*<div class="form-group col-md-6">
            <label class="control-label">Type (for future use)</label>
            <select class="form-control" disabled="disabled">
                <option value="ftp" selected="selected">FTP</option>
            </select>
        </div>
    </div>
    <div class="row">*@
                <div class="form-group col-md-3">
                    <label class=" control-label" for="login">Login</label>
                    <input name="login" type="text" class="form-control" maxlength="50" value="@Model.Server.Login">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label" for="pass">Password</label>
                    <input name="pass" type="text" class="form-control" maxlength="50" value="@Model.Server.Password">
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label class=" control-label" for="owner">Owner Name</label>
                    <input name="owner" type="text" class="form-control" maxlength="50" value="@Model.Server.Owner">
                </div>
                <div class="form-group col-md-3">
                    <label class="control-label" for="name">Server Name</label>
                    <input name="name" type="text" class="form-control" maxlength="50" value="@Model.Server.Name">
                </div>
                <div class="form-group col-md-6">
                    <label class="control-label" for="description">Server Description</label>
                    <textarea name="description" class="form-control" maxlength="1000" rows="3">@Model.Server.Description</textarea>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-1">
                    <div class="checkbox">
                        <label><input name="closed" type="checkbox" @(Model.Server.Closed ? " checked=\"checked\"" : "")> Closed</label>
                    </div>
                </div>
                <div class="form-group col-md-1">
                    <div class="checkbox">
                        <label><input name="hidden" type="checkbox" @(Model.Server.Hidden ? " checked=\"checked\"" : "")> Hidden</label>
                    </div>
                </div>
                <div class="form-group col-md-1">
                    <div class="checkbox">
                        <label><input name="noscans" type="checkbox" @(Model.Server.NoScans ? " checked=\"checked\"" : "")> NoScans</label>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Save Changes</button>
        </form>
    </div>
</div>