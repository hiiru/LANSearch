@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<LANSearch.Models.Admin.SetupModel>
@{
    Layout = "Master/Master";
    ViewBag.Title = "Inital Setup";
    ViewBag.App_Maintenance = true;
}
<div class="col-xs-12 content">
    <h2>LANSearch Setup</h2>
    <p>The initial setup currently only requires an Admin user.</p>
    @if (!string.IsNullOrWhiteSpace(Model.Error))
    {
        <div class="alert alert-danger" role="alert">@Html.Raw(Model.Error)</div>
    }
    <div class="row">
        <h4>Admin User</h4>
        <form class="form-horizontal" role="form" method="post">
            <div class="form-group">
                <label for="user" class="col-sm-2 control-label">Username</label>
                <div class="col-sm-10"><input name="user" type="text" class="form-control" maxlength="20" value="@(Model.User!=null?Model.User.UserName:"")"></div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10"><input name="email" type="text" class="form-control" maxlength="20" value="@(Model.User!=null?Model.User.Email:"")"></div>
            </div>
            <div class="form-group">
                <label for="pass" class="col-sm-2 control-label">Password</label>
                <div class="col-sm-10"><input name="pass" type="password" class="form-control" maxlength="50"></div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>