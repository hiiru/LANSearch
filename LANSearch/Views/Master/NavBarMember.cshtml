@using LANSearch.Data.User
@using Nancy.Security
@if (RenderContext.Context.CurrentUser != null)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Member<span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            <li><a href="@Url.Content("~/Member/Profile")">Profile</a></li>
            @if (RenderContext.Context.CurrentUser.HasClaim(UserRoles.MEMBER))
            {
                <li><a href="@Url.Content("~/Member/Notifications")">Notifications</a></li>
                <li class="divider"></li>
                <li><a href="@Url.Content("~/Member/Server")">Server</a></li>
            }
        </ul>
    </li>
}